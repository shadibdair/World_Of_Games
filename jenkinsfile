pipeline {
agent any
    
    stages {
        stage('check') {
            steps {
                git 'https://github.com/shadibdair/World_of_Games.git'
            }
        }
        stage('build') {
            steps {
                sh 'sudo docker build -t 2020 .'
            }
        }
        stage('run') {
            steps {
                sh 'doccker-compose up -d'
            }
        }
        stage('test') {
            steps {
                sh 'e2e.py'
            }
        }
        stage('finalize') {
            steps {
                sh 'docker-compose down'
            }
        }
    }
    
}
